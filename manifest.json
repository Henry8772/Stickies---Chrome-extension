{
    "name": "Sickies",
    "version": "1.0",
    "description": "A small and synchronous chrome extension for taking notes.",
    "author" : "Osef-Z",
    "permissions": [
      "activeTab",
      "declarativeContent",
      "storage"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action":{
        "default_icon": "images/stickies32.png",
        "default_title": "Stickies",
        "default_popup": "index.html"
    },
    "icons": {
      "16": "images/stickies16.png",
      "32": "images/stickies32.png",
      "48": "images/stickies48.png",
      "128": "images/stickies128.png"
    },
    "manifest_version": 2
}